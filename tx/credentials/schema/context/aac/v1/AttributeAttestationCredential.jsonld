{
  "@context": {
    "@version": 1.1,
    "schema": "https://schema.org/",
    "aac-aspect": "https://raw.githubusercontent.com/eclipse-tractusx/tractusx-profiles/refs/heads/main/tx/credentials/schema/context/aac/v1/AttributeAttestationCredential.jsonld#",
    "AttributeAttestationCredential": {
      "@id": "aac-aspect:AttributeAttestationCredential",
      "@type": "@id"
    },
    "attributes": {
      "@id": "aac-aspect:attributes",
      "@container": "@list",
      "@context": {
        "@version": 1.1,
        "@definition": "Mandatory: Array of individual attributes indicated by `path` separated by `.` in the @id property",
        "id": "@id",
        "type": "@type",
        "digestMultibase": {
          "@id": "aac-aspect:digestMultibase",
          "@type": "schema:string",
          "@context": {
            "@definition": "Mandatory: SHA3-512 from the attribute validated"
          }
        },
        "revealedValue": {
          "@id": "aac-aspect:revealedValue",
          "@type": "schema:string",
          "@context": {
            "@definition": "Optional: Revealed value which can be exposed if needed"
          }
        },
        "unit": {
          "@id": "aac-aspect:unit",
          "@type": "schema:string",
          "@context": {
            "@definition": "Optional: Specifies the unit from the attribute"
          }
        },
        "validationMethod": {
          "@id": "aac-aspect:validationMethod",
          "@container": "@list",
          "@context": {
            "@version": 1.1,
            "@definition": "Array of validation methods used for data verification and attestation",
            "id": "@id",
            "type": "@type",
            "label": {
              "@id": "aac-aspect:label",
              "@type": "schema:string"
            },
            "uri": {
              "@id": "aac-aspect:uri",
              "@type": "schema:string"
            },
            "complianceCriteria": {
              "@id": "aac-aspect:complianceCriteria",
              "@container": "@list",
              "@context": {
                "@version": 1.1,
                "type": "@type",
                "value": {
                  "@id": "aac-aspect:value",
                  "@type": "schema:string"
                }
              }
            }
          }
        }
      }
    },
    "hiddenAttributes": {
      "@id": "aac-aspect:hiddenAttributes",
      "@container": "@list",
      "@context": {
        "@version": 1.1,
        "@definition": "Optional: Used for selective disclosure attributes",
        "id": "@id",
        "digestMultibase": {
          "@id": "aac-aspect:digestMultibase",
          "@type": "schema:string"
        },
        "status": {
          "@id": "aac-aspect:status",
          "@type": "schema:string"
        }
      }
    },
    "origin": {
      "@id": "aac-aspect:origin",
      "@context": {
        "@version": 1.1,
        "@definition": "Optional: Indicates from which origin was used to generate this credential",
        "id": "@id",
        "type": "@type",
        "digestMultibase": {
          "@id": "aac-aspect:digestMultibase",
          "@type": "schema:string"
        },
        "semanticId": {
          "@id": "aac-aspect:semanticId",
          "@type": "@id"
        }
      }
    }
  }
}
